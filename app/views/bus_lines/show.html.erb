<% content_for(:title, "See A Bus Line | Timetable") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('bus.jpg', class: 'pull-left', width: '200') %><b>&nbsp&nbspBus Timetable</b></h1>
  </div><br>
  <h3><u>See A Bus Line</u></h3>
  <h5>(Click on a link to edit the line name or delete the line)</h5>
  <h4><%= link_to @line.line_name, edit_bus_line_path(@line) %></h4>
  <ul><% if @line.bus_stops.empty? %>
    <li>There are no stops for this line</li>
  <% else %>
    <% @line.bus_stops.order(:stop_time).each do |stop| %>
      <li><%= link_to stop.stop_time.strftime('%l:%M %P'), bus_stop_path(stop) %>:
        <%= stop.bus_line.line_name %> stops at
        <%= link_to stop.bus_station.station_name, bus_station_path(stop.bus_station) %></li>
        <% end %>
  <% end %></ul>
  <br><br><br>
  <hr>
  <h4><%= link_to "Add A New Bus Line", new_bus_line_path %></h4>
  <h4><%= link_to "See All Bus Lines", bus_lines_path %></h4>
</div>
