<% content_for(:title, "See All Bus Stations | Timetable") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('bus.jpg', class: 'pull-left', width: '200') %><b>&nbsp&nbspBus Timetable</b></h1>
  </div><br>
  <h3><u>See All Bus Stations</u></h3>
  <h5>(Click on a link to see more information about the station)</h5>
  <% if @stations.empty? %>
    <h3>There are no bus stations in the database</h3>
  <% else %>
    <ul><% @stations.each do |station| %>
      <li><%= link_to station.station_name, bus_station_path(station) %></li>
        <% end %>
    </ul>
  <% end %>
  <br><br><br>
  <hr>
  <h4><%= link_to "Add A New Bus Station", new_bus_station_path %></h4>
</div>
