<% content_for(:title, "See All Bus Stops | Timetable") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('bus.jpg', class: 'pull-left', width: '200') %><b>&nbsp&nbspBus Timetable</b></h1>
  </div><br>
  <h3><u>See All Bus Stops</u></h3>
  <h5>(Click on a link to see the details of the stop)</h5>
  <% if @stops.empty? %>
    <h3>There are no bus stops in the database</h3>
  <% else %>
    <ul><% @stops.each do |stop| %>
      <li><%= link_to stop.stop_time.strftime('%l:%M %P'), bus_stop_path(stop) %>: Line <%= stop.bus_line.line_name %> arrives at station <%= stop.bus_station.station_name %></li>
        <% end %>
    </ul>
  <% end %>
  <br><br><br>
  <hr>
  <h4><%= link_to "Add A New Bus Stop", new_bus_stop_path %></h4>
  <h4><%= link_to "See All Bus Stations", bus_stations_path %></h4>
  <h4><%= link_to "See All Bus Lines", bus_lines_path %></h4>
</div>
