<% content_for(:title, "Edit Bus Stop | Timetable") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('bus.jpg', class: 'pull-left', width: '200') %><b>&nbsp&nbspBus Timetable</b></h1>
  </div><br>
  <h3><u>Edit a Stop</u></h3>
    <%= render('form') %>
  <br>
  <p><%= link_to "Delete Stop", bus_stop_path(@stop),
                         :data => {:confirm => "Please confirm the deletion of this bus stop",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>
  <br><br><br>
  <hr>
  <h4><%= link_to "See All Bus Stops", bus_stops_path %></h4>
  <h4><%= link_to "New Bus Stop", new_bus_stop_path %></h4>
</div>
